@{
    ViewBag.Title = "GameDetails";
}

<html>
<head>
    <title>Game Details</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/page_styles/game_details_page.css">
</head>
<body>
    <div id="gameCarousel" class="carousel slide gameCarousel" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#gameCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#gameCarousel" data-slide-to="1"></li>
            <li data-target="#gameCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="https://assets-prd.ignimgs.com/2022/04/19/wow-dragonflight-button-1-1650398895381.jpg" alt="Game 1 Image" class="carousel-image">
            </div>
            <div class="item">
                <img src="https://cdn.vox-cdn.com/thumbor/-xPXmhTnvseaYLNxaYCyf2CsFtY=/0x0:1920x1080/1200x800/filters:focal(807x387:1113x693)/cdn.vox-cdn.com/uploads/chorus_image/image/70767351/WoW_Dragonflight_Alexstrasza_006_1080p.0.jpg" alt="Game 2 Image" class="carousel-image">
            </div>
            <div class="item">
                <img src="https://www.gamespot.com/a/uploads/original/1647/16470614/4034575-wowdragonflightdragoninterview.jpg" alt="Game 3 Image" class="carousel-image">
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#gameCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#gameCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <hr />
    <div class="gameDetails">
        <div class="gameDetailsContent">
            <h1 class="gameDetailsTitle">@Model.Name</h1>
            <p class="gameDetailsCategory">@Model.CategoryName</p>
            <p>Platform: @Model.Platform</p>
            <p class="gameDetailsDescription">@Model.Description</p>
            <p class="gameDetailsPrice">@Model.Price UA</p>
            <a href="#" class="gameDetailsBuyButton">Buy Now</a>
        </div>
    </div>
    <hr />
    <div class="system-requirements">
        <h2>System Requirements</h2>
        <ul>
            <li><strong>OS:</strong>@Model.SysReq.OS</li>
            <li><strong>Processor:</strong>@Model.SysReq.Processor</li>
            <li><strong>Memory:</strong>@Model.SysReq.Memory</li>
            <li><strong>Graphics:</strong>@Model.SysReq.Graphics</li>
            <li><strong>DirectX:</strong>@Model.SysReq.DirectX</li>
            <li><strong>Storage:</strong>@Model.SysReq.Storage</li>
            @if (Model.SysReq.SoundCard == null)
            {
                <li><strong>Sound Card:</strong> DirectX compatible sound card</li>
            }
            else
            {
                <li><strong>Sound Card:</strong>@Model.SysReq.SoundCard</li>
            }
        </ul>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3/js/bootstrap.min.js"></script>
<script>
$(document).ready(function () {
// Initialize Bootstrap carousel
$('#gameCarousel').carousel();
});
</script>
