
@{
    ViewBag.Title = "GetForecastNonExistSoftware";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forecasting for non-existing software</title>
    <link href="~/Content/page_styles/forecast_nonexist.css" rel="stylesheet" />
</head>
<body>
    <div class="forecasting-container">
        <div class="forecasting-header">
            <h1>Forecasting for non-existing software</h1>
        </div>
        <div class="forecasting-button-container">
            <button class="forecasting-button" onclick="showTags()">Tags</button>
            <button class="forecasting-button" onclick="showRequirements()">Requirements</button>
        </div>
        <div id="tagsBlock" class="forecasting-block" style="display: none;">
            <div class="forecasting-text">Tags</div>
            <div class="forecasting-text">Tags</div>
            <div class="forecasting-option-picker">
                <select>
                    <option value="tag1">Tag 1</option>
                    <option value="tag2">Tag 2</option>
                    <option value="tag3">Tag 3</option>
                </select>
            </div>
            <div class="forecasting-date-picker">
                <div class="forecasting-text">Start Date</div>
                <input type="date">
            </div>
            <div class="forecasting-date-picker">
                <div class="forecasting-text">End Date</div>
                <input type="date">
            </div>
            @using (Html.BeginForm("GetForecastNonExistSoftware", "Admin", FormMethod.Post))
            {
                <button class="forecasting-button">Get Forecast</button>
            }
        </div>
        <div id="requirementsBlock" class="forecasting-block" style="display: none;">
            <div class="forecasting-text">Requirements</div>
            <div class="forecasting-text">Requirements</div>
            <div class="forecasting-option-picker">
                <select>
                    <option value="req1">Requirement 1</option>
                    <option value="req2">Requirement 2</option>
                    <option value="req3">Requirement 3</option>
                </select>
            </div>
            <div class="forecasting-date-picker">
                <div class="forecasting-text">Start Date</div>
                <input type="date">
            </div>
            <div class="forecasting-date-picker">
                <div class="forecasting-text">End Date</div>
                <input type="date">
            </div>
            @using (Html.BeginForm("GetForecastNonExistSoftware", "Admin", FormMethod.Post))
            {
                <button class="forecasting-button">Get Forecast</button>
            }
        </div>
    </div>

    <script src="script.js"></script>
</body>


<script src="~/Scripts/jsscripts/nonexist_script.js"></script>